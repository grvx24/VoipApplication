<Window  x:Class="VoIP_Client.FriendsListEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VoIP_Client"
        mc:Ignorable="d"
        Background="LightGreen"
        Title="Edytuj kontakt" Height="300" Width="300"
         WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel Background="LightGreen" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock TextWrapping="Wrap" x:Name="EmailTextBlock" TextAlignment="Left" Margin="10,20" FontSize="25" Width="277" Height="77" Text="email@example.com"/>
        <TextBlock x:Name="InfoLabel" TextAlignment="Center" Margin="30,0" FontSize="25" Text="Podaj nick" ToolTip="Nazwa użytkownika widoczna lokalnie."/>
        <TextBox x:Name="UsernameTextBox" Background="White" Margin="20,10" FontSize="25"/>
        <StackPanel Background="LightGreen" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button x:Name="EditFavouriteUserButton" MinWidth="100" Margin="25,15" Content="Dodaj" Click="EditFavouriteUserButton_Click"/>
            <Button x:Name="CancelButton" MinWidth="100" Margin="25,0" Click="CancelButton_Click" Content="Anuluj"/>
        </StackPanel>
    </StackPanel>
</Window>
