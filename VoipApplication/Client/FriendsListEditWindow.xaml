<Window x:Class="VoIP_Client.FriendsListEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VoIP_Client"
        mc:Ignorable="d"
        Background="Orange"
        Title="Edytuj kontakt" Height="300" Width="300">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Name="EmailTextBlock" TextAlignment="Center" Margin="30,0" FontSize="25" Text="email@example.com"></TextBlock>
        <TextBox Name="UsernameTextBox" Background="White" Margin="20,10" FontSize="25"></TextBox>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Name="EditFavouriteUserButton" MinWidth="100" Margin="25,15" Content="Edytuj" Click="EditFavouriteUserButton_Click"></Button>
            <Button Name="CancelButton" MinWidth="100" Margin="25,0" Click="CancelButton_Click" Content="Anuluj"></Button>
        </StackPanel>
    </StackPanel>
</Window>
