<Window x:Class="VoIP_Client.CallingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VoIP_Client"
        mc:Ignorable="d"
        Title="Okno rozmowy" Height="150" Width="700" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <StackPanel Orientation="Horizontal">
        <TextBlock TextWrapping="Wrap" x:Name="NickLabel" FontSize="20" Margin="20,34,20,44" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Email@example.com" Height="64" Width="256"/>
        <Button x:Name="AnswerButton" Background="Green" Margin="20,0" MinHeight="75" MinWidth="150" Click="AnswerButton_Click" Content="Odbierz"/>
        <Button x:Name="RejectButton" Background="Red" Margin="20,0" MinHeight="75" MinWidth="150" Click="RejectButton_Click" Content="Odrzuć"/>
    </StackPanel>
</Window>
